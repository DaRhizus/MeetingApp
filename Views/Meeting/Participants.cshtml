@{
    ViewBag.Title = "Katılımcılar";
}

@model List<UserInfo>
<main class="text-center">
    <h1>KATILIMCI LİSTESİ</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Katılım Durumu</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
                @{int i = 0;}
                @foreach(var participant in @Model){
                    var durum = participant.Participate == true ? "Evet" : "Hayır";
                    var className = (bool)participant.Participate == true ? "table-success" : "table-danger";

                    if((bool)participant.Participate){
                        i++;
                    }
                    
                    <tr class = "@className">
                        <td>@participant.Name</td>
                        <td>@durum</td>
                        <td>
                            <a asp-controller="Meeting" asp-action="Details" asp-route-id="@participant.Id" class="btn btn-small btn-info">Detay</a>
                        </td>
                    </tr>
            }
            </tbody>    
        </table>

        <div class="card">
            <div class="card-body">
                <span>Katılımcı Sayısı: @i</span>
            </div>
        </div>
    </main>
    